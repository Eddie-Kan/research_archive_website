# Runtime mode: "local" or "cloud"
RUNTIME_MODE=local

# Database
DATABASE_URL=file:./data/archive.db

# Content repo path
CONTENT_REPO_PATH=./content-repo

# Media storage
MEDIA_STORAGE_PATH=./content-repo/media

# Server binding (local mode: localhost only)
HOST=127.0.0.1
PORT=3000

# Cloud mode settings (unused in local mode)
# POSTGRES_URL=postgresql://user:pass@host:5432/db
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=ek-archive-media
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# AUTH_SECRET=generate-a-random-secret
# OWNER_PASSWORD_HASH=
# Default password: run `npm run db:seed` (sets abc123) or `npm run admin:set-password <password>`

# Optional: semantic search
SEMANTIC_SEARCH_ENABLED=false
# EMBEDDING_MODEL_PATH=./models/all-MiniLM-L6-v2

# Export
EXPORT_STATIC=false

# Backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAILY=30
BACKUP_RETENTION_MONTHLY=12
